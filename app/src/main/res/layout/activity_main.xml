<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Main">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="551dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/btnBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7390cd"
            android:gravity="left"
            android:padding="6dp"
            android:text="@string/txtMainTitle"
            android:textColor="#FFFFFF"
            android:textSize="13sp">

        </TextView>

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="25dp">

            <ImageButton
                android:id="@+id/buttonAutomaticBarcode"
                android:layout_width="50dp"
                android:layout_height="86dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:maxWidth="250px"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/control_stock" />

            <ImageButton
                android:id="@+id/ctrlLineal"
                android:layout_width="50dp"
                android:layout_height="86dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:maxWidth="250px"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/control_stock_l" />

            <ImageButton
                android:id="@+id/buttonVerPed"
                android:layout_width="45dp"
                android:layout_height="89dp"
                android:layout_margin="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:maxWidth="250px"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/v_pedido" />

            <ImageButton
                android:id="@+id/buttonVerPed2"
                android:layout_width="45dp"
                android:layout_height="89dp"
                android:layout_margin="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:maxWidth="250px"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:srcCompat="@drawable/v_pedido" />

            <ImageButton
                android:id="@+id/buttonEanAssign"
                android:layout_width="41dp"
                android:layout_height="86dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:maxWidth="250px"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/assign_ean" />

            <ImageButton
                android:id="@+id/buttonVerUbi"
                android:layout_width="50dp"
                android:layout_height="86dp"
                android:layout_margin="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:maxWidth="250px"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:srcCompat="@drawable/consulta_mat_chai" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>